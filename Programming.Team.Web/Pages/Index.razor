                        <MudText Typo="Typo.subtitle2" Class="stat-label">More Interviews</MudText>
                    </MudItem>
                </MudGrid>
            </MudItem>

        </MudGrid>
        <MudSpacer />

        <!-- FAQ Section -->
        @if(ViewModel.FAQs.Count > 0)
        {
        <MudContainer Class="mt-10">
            <h2 class="section-title">Frequently Asked Questions</h2>

            <MudGrid>
