@inherits ReactiveComponentBase<ExpVM>

@if (ViewModel != null)
{
    <AlertView Alert="ViewModel.Alert" />
    <MudStack>
        <MudText>Company: @ViewModel.Company?.Name</MudText>
        <MudTextField
            @bind-Value="ViewModel.Title"
            Label="Role" Placeholder="@PlaceholderRole" Variant="Variant.Outlined" />
        <MudElement Class="d-flex">
            <MudDatePicker
                @bind-Date="ViewModel.StartDateTime" Label="Start Date" />
            <MudSpacer/>
            <MudDatePicker
                @bind-Date="ViewModel.EndDateTime" Label="End Date" />
        </MudElement>
        <MudTextField
            Lines="10"
            @bind-Value="ViewModel.Description"
            Label="Description"
            Placeholder="@PlaceholderDescription"
            Variant="Variant.Outlined"
            Style="margin-bottom: -1rem;"
        />
        @* At this point weird space-taking popover: covered by reverse margins *@

        @* <MudTextField @bind-Value="ViewModel.SortOrder" Label="Sort Order" Variant="Variant.Outlined" /> *@

        <PositionSkillsView
            ViewModel="ViewModel.SkillsViewModel"
        />
        <MudElement
            Class="d-flex justify-between">
            <MudButton
                OnClick="ViewModel.Update.BindCommand<MouseEventArgs>()"
                Class="fw-bold"
                Variant="Variant.Filled"
                Color="Color.Primary">Update</MudButton>
            <MudButton
                OnClick="ViewModel.Delete.BindCommand<MouseEventArgs>()"
                Class="fw-bold"
                Variant="Variant.Filled"
                Color="Color.Error">Delete</MudButton>
        </MudElement>
    </MudStack>
}

@code {
    public string PlaceholderRole = "Brand Director";
    public string PlaceholderDescription = "As the Director of a women’s fashion brand, I led the creative vision and strategic direction, curating modern, trend-driven collections that resonated with diverse audiences. I managed design, production, and marketing teams to deliver high-quality, on-trend apparel, resulting in a 25% growth in customer engagement and sales. By fostering strong relationships with influencers and retailers, I amplified the brand’s presence in the competitive women’s fashion market.";
}
