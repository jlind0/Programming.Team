@using Microsoft.AspNetCore.Components.Web
@namespace Programming.Team.Web.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
    @* Sincere: this is very minimum. technically not necessary *@
    <link href="_content/LukeYoo.Blazor.Sincere/blazor.sincere.css" rel="stylesheet" />
    @* MudBlazor *@
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />
    <style>
        @* override mudblazor default values *@
        :root {
            --mud-palette-primary: rgba(47, 166, 227, 1) !important;
            --mud-palette-primary-rgb: 47, 166, 227 !important;
            --mud-palette-primary-darken: rgba(28,99,136,1) !important;
            --mud-palette-primary-lighten: rgba(130,201,238,1) !important;
            --mud-typography-default-family: "Inter", serif !important;
            --mud-default-borderradius: 8px !important;
            --mud-typography-button-text-transform: initial !important;
        }
        @* PDF canvas of Home Resume Samples *@
        .mud-carousel canvas {
            width: 100%;
        }
        @* PDF Toolbar at home(Index.razor) 
        .home-pdfviewer-container > div > div:first-child {
            display: none !important;
        }*@
        @* PDF Canvas Container *@
        .home-pdfviewer-container > div > div:nth-child(2){
            padding: 0 !important;
        }
        canvas.explore_area{
            float:left;
            height:550px;
            width:100%;
        }
        @* Bootstrap-like extension *@
        .text-nowrap {
            text-wrap: nowrap;
        }
        .fw-semi-bold {
            font-weight: 500;
        }
        .fw-bold {
            font-weight: 600;
        }
        .rounded-mxl {
            border-radius: 16px;
        }
        @* Corresponds to .mud-typography-xxx, but only font-size *@
        .fs-h1 {
           font-size: 6rem !important;
        }
        .fs-h2 {
            font-size: 3.75rem !important;
        }
        .fs-h3 {
            font-size: 3rem !important;
        }
        .fs-h4 {
            font-size: 2.125rem !important;
        }
        .fs-h5 {
            font-size: 1.5rem !important;
        }
        .fs-h6 {
            font-size: 1.25rem !important;
        }
        .fs-body1 {
            font-size: 1rem !important;
        }
        .fs-body2 {
            font-size: .875rem !important;
        }
        @* Smaller font-sizes *@
        .fs-body3 {
            font-size: .625rem !important;
        }
        .fs-body4 {
            font-size: .5rem !important;
        }
        @* MudBlazor(8.2.0) Extension/Complement
           NOTE: revisit here for any upgrade of MudBlazor *@
        .mux-popover-fixed {
            position: fixed !important;
            top: unset !important;
        }
        .mux-popover-left-unset {
            left: unset !important;
        }
        .mux-popover-right-zero {
            right: 0;
        }
        .mux-popover-right-m10p {
            right: -10%;
        }

    </style>
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    @RenderBody()

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    @* MudBlazor *@
    <script src="_content/MudBlazor/MudBlazor.min.js"></script>
    @* Sincere *@
    <script src="_content/LukeYoo.Blazor.Sincere/blazor.sincere.js"></script>
</body>
</html>
